{
  "name": "argocd-progressive-sync-extension",
  "version": "1.0.0",
  "description": "ArgoCD UI extension to provide better feedback on the status of progressive syncs.",
  "main": "index.js",
  "repository": "https://github.com/alexymantha/argocd-progressive-sync-extension",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config ./webpack.config.js --mode=development && tar -C dist -zcvf extension.tar.gz resources",
    "install": "yarn build && ./install-cluster.sh"
  },
  "peerDeependencies": {
    "argo-ui": "git+https://github.com/argoproj/argo-ui.git",
    "react": "^16.9.3",
    "react-dom": "^16.9.3",
    "moment": "^2.29.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^17.0.44",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.8",
    "@types/styled-components": "^5.1.25",
    "argo-ui": "git+https://github.com/argoproj/argo-ui.git",
    "babel-preset-react": "^6.24.1",
    "esbuild-loader": "^3.0.1",
    "portable-fetch": "^3.0.0",
    "raw-loader": "0.5.1",
    "react-dom": "^17.0.2",
    "react-keyhooks": "^0.2.3",
    "rxjs": "^7.1.0",
    "sass": "1.34.1",
    "sass-loader": "10.2.1",
    "style-loader": "1.3.0",
    "ts-loader": "8.2.0",
    "typescript": "^4.3.5",
    "webpack": "^5.75.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^4.7.2"
  }
}
